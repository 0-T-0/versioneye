<div id  = "followers-container">
  <h4> They like <%= @lang.to_s.capitalize %> too. </h4>
  <ul class = "nav nav-followers">
    <% @followers.each do |user| %>
      <li class = "follower-item">
      <% if !user.nil? && !user.email.nil? %>
        <a href="<%= user_path(user) %>">
          <div style="width: 68px; height:68px; overflow: hidden;">
            <%=  gravatar_image_tag(user.email, 
                                    :alt => user.fullname,
                                    :title => user.fullname, 
                                    :style => "width: 68px;", 
                                    :gravatar => {:size => 68, 
                                                  :default => "#{Settings.server_url}/profile_icon.png" }) %>
            </div>
          </a>
        <% end %>

      </li>
    <% end %>
  </ul>
</div>
