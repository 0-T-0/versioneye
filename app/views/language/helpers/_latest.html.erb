<div id = "latest-products-container" class = "media">
  <h2 class="section_header"> Latest updated libraries </h2>
  <% @latest_products.each_with_index do |prod, i| %>
    <% if prod && prod.product %>
      <div class = "media-body product-item">
        <h5 class = "media-heading">
           <%= i + 1 %>. <a href = "<%= products_path(lang: prod.language_esc, key: Product.encode_product_key(prod.prod_key) ) %>"><%= prod.name %></a>
          <span class = "pull-right"><%= render partial: "shared/product_follow_mini", locals: {product: prod, user: current_user} %></span>
        </h5>
        <p> <%= prod.product.short_summary %> </p>
      </div>
    <% end %>
  <% end %>
</div>
