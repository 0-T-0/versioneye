<div align="center">
	<div>
		Crawles 
	</div>	
	<div class="searchResults">
		<% if !@crawles.nil? %>
			<% @crawles.each do |crawle| %>
				<div class="searchResult">
					<%= link_to crawle.crawler_name_and_version, crawle_path(crawle.to_param), :class => "searchResultLink" %><br/>
					<span class="searchResultMeta">Repository: <%= crawle.repository_src %></span><br/>
					<% if crawle.errors.count() > 0 %>
						<span class="searchResultMeta" style="color: red; font-weight:bold">Errors: <%= crawle.errors.count() %></span><br/>	
					<% end %>
				</div>				
			<% end %>
		<% end %>
	</div>
</div>