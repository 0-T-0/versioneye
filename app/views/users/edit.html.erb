<div class="boxHeader">
	Name Settings
</div>
<div class="boxContainer">
<%= form_tag("/users/#{@user.username}/updatenames", :method => "post") do  %>    
    <div style="display:table-row;">
      <div class="labelCel">
		<%= label_tag(:fullname, "Full Name") %>
      </div>
      <div class="inputCel">
		<%= text_field_tag :fullname, @user.fullname, :class => "round" %>
      </div>
      <div class="hintCel meta-text-small">
        This is visible on your posts.
      </div>
    </div>

    <div style="display:table-row;">
      <div class="labelCel">
		<%= label_tag(:username) %>
      </div>
      <div class="inputCel">
		<%= text_field_tag :new_username, @user.new_username, :class => "round" %>
      </div>
      <div class="hintCel meta-text-small" >
        Your public profile:<br/>
        http://versioneye.com/users/ <b>USERNAME</b>
      </div>
    </div>

	<div style="display:table-row;">
      <div class="labelCel">
		<%= label_tag(:password) %>
      </div>
      <div class="inputCel">
		<%= password_field_tag :password, "", :class => "round" %>
      </div>
      <div class="hintCel meta-text-small" >
        Your secret
      </div>
    </div>

    <div style="display:table-row;">
      <div class="labelCel"></div>
      <div class="submitCel">
		<%= submit_tag "Save", :class => "button" %>
      </div>
      <div class="hintCel meta-text-small"></div>
    </div>
<% end %>
</div>

<div class="boxHeader">
	Password Settings
</div>
<div class="boxContainer">
