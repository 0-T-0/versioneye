      </div>
      <div class="inputCel">
		<%= password_field_tag :password, "", :class => "round" %>
      </div>
      <div class="hintCel meta-text-small" >
        Your current secret
      </div>
    </div>	

	<div style="display:table-row;">
      <div class="labelCel">
		<%= label_tag("New password") %>
      </div>
      <div class="inputCel">
		<%= password_field_tag :new_password, "", :class => "round" %>
      </div>
      <div class="hintCel meta-text-small" >
        Your new secret
      </div>
    </div>

	<div style="display:table-row;">
      <div class="labelCel">
		<%= label_tag("Repeat New pas.") %>
      </div>
      <div class="inputCel">
		<%= password_field_tag :repeat_new_password, "", :class => "round" %>
      </div>
      <div class="hintCel meta-text-small" >
        Your new secret
      </div>
    </div>

    <div style="display:table-row;">
      <div class="labelCel"></div>
      <div class="submitCel">
		<%= submit_tag "Save", :class => "button" %>
      </div>
      <div class="hintCel meta-text-small"></div>
    </div>
<% end %>
</div>