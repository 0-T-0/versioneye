
<% if flash[:success].nil? %>
<div class="boxHeader">
	I forgott my password :-(
</div>
<div class="boxContainer">
	
	Please type in your E-Mail address.<br/>
	We will send you an E-Mail with a new password.<br/>
	<br/>

	<%= form_tag("/resetpassword", :method => "post") do  %>    
	    <div style="display:table-row;">
	      <div class="labelCel">
			<%= label_tag(:email, "E-Mail") %>
	      </div>
	      <div class="inputCel">
			<%= text_field_tag :email, "", :class => "round" %>
	      </div>
	      <div class="hintCel meta-text-small">
        
	      </div>
	    </div>

		<div style="display:table-row;">
	      <div class="labelCel"></div>
	      <div class="submitCel">
			<%= submit_tag "Reset", :class => "button" %>
	      </div>
	      <div class="hintCel meta-text-small"></div>
	    </div>
	<% end %>
		
</div>
<% end %>