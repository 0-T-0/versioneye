<div class="boxHeader">
	<span>
		Sign Up
	</span>
	<span style="padding-left: 666px;">
		<%= link_to image_tag("flag_en.jpg", :class=>"flag"), signup_path(:locale => :en)  %>
		<%= link_to image_tag("flag_de.jpg", :class=>"flag"), signup_path(:locale => :de) %>
	<span>	
</div>
<div class="boxContainer" style="height: 440px;">
	<div class="formCel">
		<%= form_for @user do |f| %>
		    <div class="messages">
		        <%= render 'shared/error_messages', :object => f.object %>
		    </div>

		    <div style="display:table-row;">
		      <div class="labelCel">
		        <%= f.label :fullname %> 
		      </div>
		      <div class="inputCel">
		        <%= f.text_field :fullname, :class => "round", :id => "fullname" %>
		      </div>
		    </div>

		    <div style="display:table-row;">
		      <div class="labelCel">
		        <%= f.label :username %>
		      </div>
		      <div class="inputCel">
		        <%= f.text_field :username, :class => "round", :id => "username" %>
		      </div>
		    </div>

		    <div style="display:table-row;">
		      <div class="labelCel">
		        <%= f.label :email %>
		      </div>
		      <div class="inputCel">
		        <%= f.text_field :email, :class => "round", :id => "email" %>
		      </div>
		    </div>

		    <div style="display:table-row;">
		      <div class="labelCel">
		        <%= f.label :password %>
		      </div>
		      <div class="inputCel">
		        <%= f.password_field :password, :class => "round", :id => "password" %>
		      </div>
		    </div>

		    <div style="display:table-row;">
		      <div class="labelCel" style="vertical-align: top">
		        <%= f.check_box :terms %>
		      </div>
		      <div class="inputCel">
		        <label for="user_terms" class="label-small">
					<%= t(:terms_part_1) %>
					<% if I18n.locale == :de %>
						<%= link_to "Nutzungsbedingungen", nutzungsbedingungen_path %> 
					<% else %>
						<%= link_to "Terms of Use", terms_path %> 
					<% end %>					 
					<%= t(:terms_part_2) %>
				</label><br/><br/>
		      </div>
		    </div>
		
			<div style="display:table-row;">
		      <div class="labelCel" style="vertical-align: top">
		        <%= f.check_box :datenerhebung %>
		      </div>
		      <div class="inputCel">
		        <label for="user_datenerhebung" class="label-small">
					<%= t(:daten_part_1) %> 
					<% if I18n.locale == :de %>
						<%= link_to "Datenerhebung", datenerhebung_path %>
					<% else %>
						<%= link_to "Data Collection", datacollection_path %>
					<% end %>
					<%= t(:daten_part_2) %> 
				</label><br/><br/>
		      </div>
		    </div>

		    <div style="display:table-row;">
		      <div class="labelCel"></div>
		      <div class="submitCel">
		        <%= f.submit "Sign up", :class => "button" %>
		      </div>
		    </div>

		<% end %>
	</div>
	<div class="alternativeCel" style="height: 440px;">
		<b>OR</b><br/>
		<br/>
		<br/>
		<%= render 'shared/login_options' %>
	</div>	
</div>