<div class="boxHeader">
	Sign Up
</div>
<div class="boxContainer" style="height: 380px;">
	<div class="formCel">
		<%= form_for @user do |f| %>
		    <div class="messages">
		        <%= render 'shared/error_messages', :object => f.object %>
		    </div>

		    <div style="display:table-row;">
		      <div class="labelCel">
		        <%= f.label :fullname, "Full Name" %>
		      </div>
		      <div class="inputCel">
		        <%= f.text_field :fullname, :class => "round", :id => "fullname" %>
		      </div>
		    </div>

		    <div style="display:table-row;">
		      <div class="labelCel">
		        <%= f.label :username %>
		      </div>
		      <div class="inputCel">
		        <%= f.text_field :username, :class => "round", :id => "username" %>
		      </div>
		    </div>

		    <div style="display:table-row;">
		      <div class="labelCel">
		        <%= f.label :email %>
		      </div>
		      <div class="inputCel">
		        <%= f.text_field :email, :class => "round", :id => "email" %>
		      </div>
		    </div>

		    <div style="display:table-row;">
		      <div class="labelCel">
		        <%= f.label :password %>
		      </div>
		      <div class="inputCel">
		        <%= f.password_field :password, :class => "round", :id => "password" %>
		      </div>
		    </div>

		    <div style="display:table-row;">
		      <div class="labelCel" >
		        <%= f.check_box :terms %>
		      </div>
		      <div class="inputCel">
		        <label for="user_terms">By clicking on "Sign up" below, you are agreeing to the <%= link_to "Privacy Policy / Terms", terms_path %>.</label><br/><br/>
		      </div>
		    </div>

		    <div style="display:table-row;">
		      <div class="labelCel"></div>
		      <div class="submitCel">
		        <%= f.submit "Sign up", :class => "button" %>
		      </div>
		    </div>

		<% end %>
	</div>
	<div class="alternativeCel" style="height: 380px;">
		<b>OR</b><br/>
		<br/>
		<br/>
		<%= render 'shared/login_options' %>
	</div>	
</div>