	<h1><%= @user.fullname %></h1>

	<%= link_to gravatar_image_tag( @user.email, :alt => @user.fullname, :gravatar => { :size => 200 }), user_path(@user) %>
	<% if signed_in? && current_user.id.to_s.eql?(@user.id.to_s) %>
		<a href="http://gravatar.com/emails">Change Profile Picture</a>
	<% end %>
	<br/>
	<br/>
	
	<% if !@products.nil? %>
		<div class="side-navi side-navi-selected side-navi-head">
			<a href="/users/<%=@user.username%>/favoritepackages">Favorite Packages</a>
		</div>
	<% else %>	
		<div class="side-navi side-navi-head">
			<a href="/users/<%=@user.username%>/favoritepackages">Favorite Packages</a>
		</div>
	<% end %>	
	
	<% if !@comments.nil? %>
		<div class="side-navi side-navi-selected">
			<a href="/users/<%=@user.username%>/comments">Comments</a>
		</div>
	<% else %>	
		<div class="side-navi">
			<a href="/users/<%=@user.username%>/comments">Comments</a>
		</div>
	<% end %>