<% if !@comments.nil? && @comments.length > 0 %>
	<div class="box">
		<h5>
			<%= pluralize(@comments.count, "Comments") %>
		</h5>
	</div>
	<div class="row" itemprop="comment" itemscope="" itemtype="http://schema.org/ItemList" >
		<meta name="name" content="comment" />
		<% @comments.each do |comment|  %>
				<span itemprop="itemListElement" itemscope="" itemtype="http://schema.org/UserComments"></span>
					<%= render :partial => 'shared/show_version_comment', :locals => {:comment => comment} %>
		<% end %>
	</div>
<% end %>