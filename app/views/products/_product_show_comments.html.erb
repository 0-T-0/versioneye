<% comments = @product.comments %>
<% if !comments.nil? && !comments.empty? %>
  <div class="box">
    <h5 class="desc_header">
      <%= pluralize(comments.count, "Comments") %>
    </h5>
  </div>
  <div class="row" style="margin-bottom: 20px;" >
    <% comments.each do |comment|  %>
      <%= render :partial => 'shared/show_version_comment', :locals => {:comment => comment} %>
    <% end %>
  </div>
<% end %>
