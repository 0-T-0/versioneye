<% if !@comments.nil? && @comments.length > 0 %>
	<div class="box">
		<h5>
			<%= pluralize(@comments.count, "Comments") %>
		</h5>
	</div>
	<div class="box" itemprop="comment" itemscope="" itemtype="http://schema.org/ItemList" >
		<meta name="name" content="comment" />
		<table>
		<% @comments.each do |comment|  %>
			<tr>
				<td itemprop="itemListElement" itemscope="" itemtype="http://schema.org/UserComments">
					<%= render :partial => 'shared/show_version_comment', :locals => {:comment => comment} %>
				</td>
			</tr>
		<% end %>
		</table>
	</div>
<% end %>