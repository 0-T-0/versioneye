<% if signed_in? %>
	<div class="boxHeader">
		Leave a comment
	</div>
	<div class="boxContainer">
		<%= form_for @versioncomment do |f| %>
		    <div class="messages">
		        <%= render 'shared/error_messages', :object => f.object %>
		    </div>				
			<div>
				<%= f.text_area :comment, :class => "round", :maxlength => "1000", :onKeyUp => "textCounter(this, document.getElementById('counter'), 1000)"  %>
				<%= f.hidden_field :product_key, :value => @product.prod_key %>
				<%= f.hidden_field :version, :value => @product.version %>
			</div>
			<div style="display: inline-block; width: 550px;">
				<div style="float: left">
					<%= f.submit "Save", :class => "button" %>
				</div>						
				<div style="float: right" class="meta-text-small">
					Characters left: <span id="counter">1000</span>
				</div>
			</div>
		<% end %>
	</div>
<% elsif %>
	<div class="boxHeader">
		Leave a comment
	</div>
	<div class="boxContainer">
		<p>
			<%= link_to "Sign In", signin_path %> to leave a comment.
		</p>
		<div>
			<%= render 'shared/login_options_vertical' %>
		</div>
	</div>
<% end %>