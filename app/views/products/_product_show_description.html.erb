<% if !@product.description.nil? && !@product.description.empty? %>
	<div class="boxHeader">
		Description
	</div>
	<div class="boxContainer" >
		<meta name="description" itemprop="description" content="<%= @product.description %>" />
		<% if @product.description.include? "\n" %>
			<%= @product.description.gsub!("\n", "<br/>").html_safe %>
		<% else %>
			<%= @product.description %>
		<% end %>
	</div>
<% end %>