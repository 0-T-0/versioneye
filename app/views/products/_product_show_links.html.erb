<% links         = @product.http_links %>
<% version_links = @product.http_version_links %>
<% new_links     = links.concat(version_links) %>
<div class="box header">
  <h5>
    <%= pluralize( new_links.count, "Link" ) %>
  </h5>
</div>
<div class="box content" id="relatedLinks" >
  <% if !new_links.empty? %>
    <% hash = Hash.new %>
    <% new_links.each do |link| %>
      <% if hash[link.link].nil? %>
        <a href="<%= link.get_link %>" target="new"><%= link.name %></a><br/>
      <% end %>
      <% hash[link.link] = link.name %>
    <% end %>
  <% end %>
  <% if @product.twitter_name && !@product.twitter_name.empty? %>
    <a href="https://twitter.com/<%= @product.twitter_name %>" target="twitter" >Twitter Page</a>
  <% end %>
</div>
