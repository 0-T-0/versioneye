<% links = @product.get_links %>
<% version_links = @product.get_version_links %>
<% count = links.count + version_links.count %>
<div class="boxHeader">
	<%= pluralize(count, "Link") %>
</div>
<div class="boxContainer" id="relatedLinks" itemprop="relatedLinks" itemscope="" itemtype="http://schema.org/ItemList" >
	<% if !links.empty? %>
		<% links.each do |link| %>
			<span itemprop="itemListElement" itemscope="" itemtype="http://schema.org/WebPage" >
				<a itemprop="url" href="<%= link.get_link %>" target="new">
					<span itemprop="name"><%= link.name %></span>
				</a>
			</span><br/>
		<% end %>
	<% end %>
	<% if !version_links.empty? %>
		<% version_links.each do |link| %>
			<span itemprop="itemListElement" itemscope="" itemtype="http://schema.org/WebPage" >
				<a itemprop="url" href="<%= link.get_link %>" target="new">
					<span itemprop="name"><%= link.name %></span>
				</a>
			</span><br/>
		<% end %>
	<% end %>
</div>