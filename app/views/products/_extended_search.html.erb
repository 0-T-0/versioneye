<form id="ext_searchform" action="/search" method="GET" class="form" >
<div class="" id="extended_search_container" style = "" >
	<div>
		<h5 >
			<i class = "icon_files"></i>
			Extended search
		</h5>
	</div>
	<div  class="control-group">
		<%= label_tag(:name, "Name", :class => "control-label" )%>
		<div class="controls">
			<input id="ext_lang" name="lang" type="hidden" value="<%= @lang %>" />
			<%= text_field_tag :q, @query, :class => "input-medium" %>
		</div>
	</div>
	<div class="control-group">
		<%= label_tag(:description, "Description", :class => "control-label") %>
		<div class="controls">
			<%= text_field_tag :d, @description, :class => "input-medium" %>
		</div>
	</div>
	<div class="control-group">
		<%= label_tag(:groupid, "GroupId") %>
		<div class="controls">
			<%= text_field_tag :g, @groupid, :class => "input-medium" %>
			<span class = "help-block">
				<small>GroupId is (Java) Maven2 specific</small>

			</span>
		</div>
	</div>
	<div class="control-group" style = "height: 30px; padding-bottom:10px;">
		<div class="pull-right">
			<button type="submit" class="btn2 btn-medium" >Search</button>
		</div>
	</div>

	<div class = "control-header">
		<h5>
			<i class = "icon_files"></i>
			Filter
		</h5>
	</div>
	<% if !@languages.nil? && !@languages.empty? && !@lang.nil? %>
		<% @langs = @lang.split(",") %>
		<% @languages.each do |language| %>
			<div class = "controls">
				<label for="<%= language %>" class = "checkbox" style = "color: #669acb;">
					<input id="<%= language %>" type="checkbox" name="lang" value="<%= language %>" style="height: 16px;" onclick="update_lang(this.value)" <%= "checked='checked'" if @langs.include?(language) %> />

					<%= language %>
				</label>
			</div>
		<% end %>
	<% end %>


</div>
</form>