<div class="sidebar" >
	
	:-)
	
</div>	
<div class="content">
	
	<h1>Edit <%= @product.name %></h1>
	
	<div>
		You are not allowed to edit crawled data. But you can add additional data. 
	</div>
	<div class="boxHeader">
		Description
	</div>
	<% if (@product.description && !@product.description.empty?) %>
		<div class="boxContainer" >
			<div class="meta-text-small">[ crawled data ]</div>
			<% if @product.description.include? "\n" %>
				<%= @product.description.gsub!("\n", "<br/>").html_safe %>
			<% else %>
				<%= @product.description %>
			<% end %>
		</div>
	<% end %>
	<br/>
	<div class="boxContainer">
		<%= form_tag("/package/#{@product.to_param}/update", :method => "post") do  %>    
			<%= text_area_tag :description_manual, @product.description_manual, :class => "round", :style => "width: 546px; height: 170px;", :maxlength => "1000", :onKeyUp => "textCounter(this, document.getElementById('counter'), 1000)", :id => "description"  %>
			<br/>
			<button type="submit" class="btn btn-large btn-primary" >Save</button>
		<% end %>
	</div>

	<div class="boxHeader">
		License
	</div>
	<div class="boxContainer">
		<%= form_tag("/package/#{@product.to_param}/update", :method => "post") do  %>    

			<div style="display:table-row;">
				<div class="labelCelMiddle" style="width: 80px;">
					<%= label_tag(:license, "Name") %>
				</div>
				<div class="inputCel" style="width: 450px;">
					<%= text_field_tag :license, @product.license_manual, :class => "round", :style=>"width: 420px;" %>
				</div>
		    </div>
		    <div style="display:table-row;">
				<div class="labelCelMiddle" style="width: 80px;">
					<%= label_tag(:licenseLink, "Link") %>
				</div>
				<div class="inputCel" style="width: 450px;">
					<%= text_field_tag :licenseLink, @product.licenseLink_manual, :class => "round", :style=>"width: 420px;" %>
				</div>
		    </div>
			<div style="display:table-row;">
				<div class="labelCelMiddle" style="width: 80px;">
					&nbsp;
				</div>
				<div class="inputCel" style="width: 450px;">
					<button type="submit" class="btn btn-large btn-primary" >Save</button>		
				</div>
			</div>
		<% end %>
	</div>

	<div class="boxHeader">
		Twitter
	</div>
	<div class="boxContainer">
		<%= form_tag("/package/#{@product.to_param}/update", :method => "post") do  %>    

			<div style="display:table-row;">
				<div class="labelCelMiddle" style="width: 80px;">
					<%= label_tag(:twitter_name, "ID") %>
				</div>
				<div class="inputCel" style="width: 450px;">
					<%= text_field_tag :twitter_name, @product.twitter_name, :class => "round", :style=>"width: 420px;" %>
				</div>
		    </div>
			<div style="display:table-row;">
				<div class="labelCelMiddle" style="width: 80px;">
					&nbsp;
				</div>
				<div class="inputCel" style="width: 450px;">
					<button type="submit" class="btn btn-large btn-primary" >Save</button>
				</div>
			</div>
		<% end %>
	</div>

	<div class="boxHeader">
		Link
	</div>
	<div class="boxContainer">
		<%= form_tag("/package/#{@product.to_param}/update", :method => "post") do  %>    

			<div style="display:table-row;">
				<div class="labelCelMiddle" style="width: 80px;">
					<%= label_tag(:link, "URL") %>
				</div>
				<div class="inputCel" style="width: 450px;">
					<%= text_field_tag :link_url, "", :class => "round", :style=>"width: 420px;" %>
				</div>
		    </div>
		    <div style="display:table-row;">
				<div class="labelCelMiddle" style="width: 80px;">
					<%= label_tag(:label, "Label") %>
				</div>
				<div class="inputCel" style="width: 450px;">
					<%= text_field_tag :link_name, "", :class => "round", :style=>"width: 420px;" %>
				</div>
		    </div>
		    <div style="display:table-row;">
				<div class="labelCelMiddle" style="width: 80px;">
					&nbsp;
				</div>
				<div class="inputCel" style="width: 450px;">
					<button type="submit" class="btn btn-large btn-primary" >Save</button>
				</div>
			</div>
		<% end %>
		<br/>
		<br/>
		<% version_links = @product.get_links %>
		<% if !version_links.empty? %>
			<table>
				<colgroup>
					<col width="80px;"></col>
					<col width="*"></col>
				</colgroup>
			<% version_links.each do |link| %>
				<% if link.manual  %>
					<%= form_tag("/package/#{@product.to_param}/delete_link", :method => "post") do  %>
					<tr>
						<td>
							<button type="submit" class="btn btn-danger" >Delete</button>
						</td>
						<td>
							<input id="link_url" name="link_url" type="hidden" value="<%= link.get_link %>" />
							<a href="<%= link.get_link %>" target="new"><%= link.name %></a>
						</td>
					</tr>
					<% end %>
				<% end %>
			<% end %>
			</table>
		<% end %>
	</div>


</div>