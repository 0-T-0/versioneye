<div class="sidebar">
	<div class="boxHeader">
		Filter
	</div>
	<div class="boxContainer" >
		<% if !@languages.nil? && !@languages.empty? && !@lang.nil? %>
			<% @langs = @lang.split(",") %>
			<% @languages.each do |language| %>
				<div>
					<input id="<%= language %>" type="checkbox" name="lang" value="<%= language %>" style="height: 16px;" onclick="update_lang(this.value)" <%= "checked='checked'" if @langs.include?(language) %> /><label for="<%= language %>" style="padding-left: 5px; margin: 0px; vertical-align: middle;" ><%= language %></label>
				</div>	
			<% end %>
		<% end %>
		<button id="refresh" class="btn btn-primary" type="submit"  name="commit" onClick="document.forms['ext_searchform'].submit();" style="margin-top: 5px;">Refresh</button>
	</div>	
</div>
<div class="content" >	
	
	<div align="center">
		<% if !signed_in? %>
			<%= render 'shared/dialog_follow' %>	
		<% end %>

		<%= render "extended_search" %>

		<%= render :partial => "products/show_search_results", :locals => { :products => @products, :paginate => true, :prefix => "search", :name_limit => 70 }  %>
	</div>
</div>