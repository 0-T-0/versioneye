
<% title "Search Results" %>

<% if !signed_in? %>
  <%= render 'shared/dialog_follow' %>
  <%= render 'shared/dialog_login_feature' %>
<% end %>

<div class="span3">

  <%= render "extended_search" %>

  <% if signed_in? == false %>
    <%= render "/shared/github_ad" %>
  <% end %>

</div>

<div class="span8" >
  <div class="row content_header_def" >
    <% if @products && !@products.empty? %>
      <em> `<%= params[:q] %>`</em> has returned <%= @products.total_entries %> results
    <% end %>
  </div>
  <div class="content">
    <%= render :partial => "products/show_search_results",
               :locals => { :products => @products, :paginate => true, :prefix => "search", :name_limit => 70 }  %>
  </div>
</div>
