<% if icon.nil? %>
	<% if !language.nil? && !language.empty? %>
		<% if !link.nil? %>
			<a href="<%= link %>"><%= image_tag "language/#{language.downcase}.png", :title => title, :itemprop => "image" %></a>
		<% else %>
			<%= image_tag "language/#{language.downcase}.png", :title => title, :itemprop => "image" %>
		<% end %>
	<% else %>
		<%= image_tag "eye_off.png" %>
	<% end %>									
<% else %>
	<img itemprop="image" src="<%= icon %>" width="57" height="57" />
<% end %>