<div class="slogan">
	<%= image_tag "slogan5.png", :alt => "Follow your libraries and get notified about new versions", :title => "Follow your libraries and get notified about new versions" %>
</div>
<div class="intro">		
	<div class="phone-box">
		<a href="#smartphones"><%= image_tag "phone.png" %></a>
	</div>
	<div class="movie-box">
		<iframe src="http://player.vimeo.com/video/37203548" width="500" height="281" frameborder="0" webkitAllowFullScreen mozallowfullscreen allowFullScreen></iframe>
	</div>	
</div>
<% if !signed_in? %>
	<div class="lp_box lp_login_area">
		<%= render 'shared/login_with_facebook' %> 
	</div>
<% end %>
<h1 class="lp_head" id="h1_about">
	About
</h1>
<div class="lp_box" id="about">
	<%= render 'shared/about' %>
</div>
<% if !signed_in? %>
	<div class="lp_box lp_sign_up">
		<%= form_tag("/signup", :method => "post") do  %>    
			<%= submit_tag "Sign Up For Free", :class => "lp_sign_up_button" %>
		<% end %>
	</div>
<% end %>
<h1 class="lp_head">
