
<%= render 'shared/dialog_follow' %>

<section class = "container">
	<div class = "jumbotron">
		<h1>Stay up to date with <span style =""> VersionEye</span>.</h1>
		<p>Find and follow your software libraries. It's easy.</p>
	</div>
</section>
<section class = "container">

	<div class= "search-container" >
		<form id="form" action="/search" method="GET"  >
			<input id="lang" name="lang" class = "hide" type="hidden" value="<%= @lang %>" />
			<div class="row-fluid">
				<div class = "span5">
					<input id="q" name="q" type="text" value="<%= @query %>" />
				</div>
				<div class = "span7" >
					<span> Filter library s&nbsp;</span>
					<div class= "btn-group">
					<% if !@languages.nil? && !@languages.empty? && !@lang.nil? %>
						<% @langs = @lang.split(",") %>
						<% @languages.each do |language| %>
							<% langname = language.downcase.gsub(/\./, "") %>
							<button class="btn lang" onclick="update_lang('<%= langname %>')" >
								<span class = "small-icon-<%= langname %>">&nbsp;</span>
							</button>
						<% end %>
					<% end %>
					</div>

					<button type="submit" class="btn lang-ruby btn-primary pull-right" >Search</button>
				</div>
			</div>
		</form>
	</div>
</section>

<section class = "container">
	<div class = "eye-separator">
		<img src = "/assets/eye_off.png" class = "img-circle img-rounded" />
		<hr />
	</div>

</section>
