

<div class="container l_lp_first_page" id="search_container" >
  <div class="l_lp_first_content" >
    <% if @ab.eql?("a") %>
      <%= render "/products/helpers/file_upload" %>
    <% else %>
      <%= render "/products/helpers/big_search" %>
    <% end %>
  </div>
  <div class="row col2-left-l col2-right-r l_bottom_down" >
    <div class="span3" ></div>
    <div class="span7">
      <% if @ab.eql?("a") %>
        <a href="/?ab=b" >Search <i class="icon-search"></i></a> |
      <% else %>
        <a href="/?ab=a" >File upload <i class="icon-upload"></i></a> |
      <% end %>

      <a id="learn_more" href="#">Learn more <i class="icon-arrow-down"></i></a>
    </div>
  </div>
</div>

<div id="features" class="container">
  <div class="well-white">

    <%= render "/products/helpers/what_is_versioneye" %>

    <div class="hr_row col2-left-l col2-right-r"><hr /></div>

    <%= render "/products/helpers/support_for_packagemanagers" %>

    <div class="hr_row col2-left-l col2-right-r"><hr /></div>

    <%= render "/products/helpers/integration_points" %>

  </div>
</div>

<div id="reasons" class="container" >
  <div class="well-white">
    <div class="marketing" >
      <h2 class="casual">Because software libraries don't update themselves</h2>
      <p>They just become out-dated!</p>
    </div>
    <div class="marketing" >
      <h2 class="casual">Because software libraries are not like iPhone apps</h2>
      <p>They are passive! They don't tell you that they are out-dated!</p>
    </div>
    <div class="marketing" >
      <h2 class="casual">Because software developers are wasting time with ..</h2>
      <p>looking manually for updates. Save time and money by automating this process.</p>
    </div>
  </div>
</div>

<div id="register_today" class="container" >
  <div class="row col2-left-l col2-right-r" >
    <div class  = "marketing">
      <h2>Register today. It's free!</h2>
      <%= form_tag(signup_path, :method => "GET", :style=>"margin: 0;") do  %>
        <button type="submit" class="btn btn-large btn-success" >Sign Up Now</button>
      <% end %>
      <p>
        Or have a look at our <%= link_to "subscription plans", :controller => "services", :action => "pricing" %> .
      </p>
    </div>
  </div>
</div>

