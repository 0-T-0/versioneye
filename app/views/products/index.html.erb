<div class="slogan">
	<%= image_tag "slogan.png" %>
</div>
<div class="intro">		
	<div class="phone-box">
		<a href="#smartphones"><%= image_tag "phone.png" %></a>
	</div>
	<div class="movie-box">
		<iframe width="512" height="315" src="http://www.youtube.com/embed/z-rp2TT4aXQ?wmode=opaque" frameborder="0" allowfullscreen></iframe>
