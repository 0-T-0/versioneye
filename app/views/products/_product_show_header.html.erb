
<div class  = "row">
	<div class = "span6">
		<h3 style="">
			<% prog_lang = @product.language.downcase.gsub(/\./, "") %>
			<span class = "icon48 icon-<%= prog_lang %> on" ></span>
			<%= @product.name_and_version %>
		</h3>
	</div>
	<div class = "span6">
		<ul class="nav list-share pull-right" >
			<li class="list-cell share-on-icon">
				<a href="https://twitter.com/share"
				   class="twitter-share-button"
				   data-url="<%= Settings.server_url %>/package/<%= @product.to_param %>"
				   data-text="Check out #<%= @product.name %> @VersionEye" 
				   data-count="horizontal" >Twitter</a>
					<script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="//platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>
			</li>
			<li class="list-cell share-on-icon">
				<iframe src="https://www.facebook.com/plugins/like.php?href=<%=Settings.server_url%>/package/<%=@product.to_param%>&amp;send=false&amp;layout=button_count&amp;width=100&amp;show_faces=false&amp;action=like&amp;colorscheme=light&amp;font=lucida+grande&amp;height=25" style="border:none; width:100px; height:25px" allowTransparency="true" scrolling="no" frameborder="0"></iframe>
			</li>
			<li class="list-cell share-on-icon" >
				<div class="g-plusone" data-annotation="bubble" data-size="medium" data-href="<%= Settings.server_url %>/package/<%= @product.to_param %>" style="width: 90px;"></div>
			</li>
			<li>
				<%= render 'products/product_show_bigfollow' %>
			</li>
		</ul>
	</div>
</div>