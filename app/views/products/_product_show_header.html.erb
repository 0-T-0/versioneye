<div class="row">
  <div class="span9" >
    
    <div class="span1 icon_package_header" >
      <% prog_lang = @product.language.downcase.gsub(/\./, "") %>
      <span class="icon_<%= prog_lang %> on " ></span>
    </div>
    
    <div class="span7">
      <div class="row span8 pull-left ">
        <h3 class="no_margin">
          <%= @product.name_and_version %>
        </h3>
      </div>
      <div class="row span8 pull-left ">
        <div class="span3">
          <%= render :partial => "shared/dependency_badge", :locals => { :project => @product } %> 
        </div>
        <div class="span5 pull-right">
          <ul class="list-social pull-right" >
            <%= render 'shared/share_buttons' %>
          </ul>
        </div>
      </div>
    </div>

  </div>
  <div class="span2 pull-right" >
    <%= render 'products/product_show_bigfollow' %>
  </div>
</div>