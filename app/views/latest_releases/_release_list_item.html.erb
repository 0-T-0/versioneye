<% columns ||= 3 %>
<% spans = 12/columns %>
<div class = "span<%= spans %> fluid-list-item" style = "height: 70px; overflow: hidden;">
    <% product = release_list_item %>
    <% lang = product[:language].downcase %>
    <% version_url =  package_version_path(lang: Product.encode_language(product[:language]),
                                   key: Product.encode_prod_key(product[:prod_key]),
                                   version: Version.encode_version(product[:version])) %>
    <a class = "pull-left" href = "<%= version_url %>">
      <img class="media-object" src="/assets/language/<%= lang %>.png" alt="<%= lang %>" />
    </a>
    <div class = "media-body">
      <a href = "<%= version_url %>">
        <h5><%= product[:name]%>
          <small><%= product[:version] %></small>
        </h5>
      </a>
      <p> Detected <%= time_ago_in_words(product[:created_at]) %> ago </p>
   </div>
</div>
