<% columns ||= 3 %>
<% spans = 12/columns %>
<div class = "span<%= spans %> fluid-list-item" style = "height: 70px;">
    <% @product = release_list_item %>
    <% lang = @product[:language].downcase %>
    <a class = "pull-left" href = "/latest/version/<%= lang %>">
      <img class = "media-object" src= "/assets/language/<%= lang %>.png" />
    </a>
    <div class = "media-body">
      <a href = "<%= package_version_path(lang: Product.encode_language(@product.language), 
                                          key: Product.encode_prod_key(@product[:prod_key]), 
                                          version: @product[:version]) %>">
        <h5><%= @product[:name]%> 
          <small><%= @product[:version] %></small>
        </h5>
      </a>
      <p> Detected <%= time_ago_in_words(@product[:updated_at]) %> ago </p>
   </div>
</div>
