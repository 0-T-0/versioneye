<% title "Latest releases" %>

<div class = "release-stat row-fluid">
  <div class = "span3">
    <%= render partial: "stats_table", locals: {stats: @stats_today} %>
  </div>
  <div class = "span3">
    <%= render partial: "stats_table", locals: {stats: @stats_week} %>
  </div>
  <div class = "span3">
    <%= render partial: "stats_table", locals: {stats: @stats_month} %>
  </div>
  <div class = "span3">
    <%= render partial: "stats_table", locals: {stats: @stats_last_month} %>
  </div>
</div>

<div class = "release-list">
  <h3> <%= @latest_releases.count || "" %> latest release</h3>
  <div class = "row-fluid">
    <%= render partial: "release_list_item", collection: @latest_releases, locals: {columns: 2} %>
  </div>
</div>

<div class = "language-menu" style = "padding-top: 30px;">
  <h3>Filter by Language</h3>
  <div>
    Click on icon to see lanuage specific latest versions.
  </div>
  <div class = "row-fluid">
    <% @supported_languages.each do |lang| %>
      <% lang = Product.encode_language(lang) %>
      <div class = "span1">
        <a href = "/latest/version/<%= lang %>" title= "Go to language specific page.">
          <img src = "/assets/language/<%= lang %>.png" />
        </a>
      </div>
    <% end %>
  </div>
</div>
