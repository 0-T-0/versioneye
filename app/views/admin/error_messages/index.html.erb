<div class="span8" >
  
  <div >
    <div>
      <h1>Errors</h1>
    </div>  
    <div class="searchResults">
      <% if !@errors.nil? %>
        <% @errors.each do |error| %>
          <div class="search-item">
            <div style="font-weight: bold;">
              <%= error.subject %>
            </div>
            <div>
              <%= error.errormessage %>
            </div>
            <div>
              <%= error.created_at %> - <%= error.source %>
            </div>
          </div>        
        <% end %>
      <% end %>
    </div>
  </div>

</div>
