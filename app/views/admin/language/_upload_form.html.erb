<div id = "language-upload-form" class="modal hide fade" data-backdrop="false">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h3>Upload language documents as JSON</h3>
  </div>
  <%= form_tag(admin_language_upload_path, multipart: true) do %>
      <div class="modal-body">
        <%= file_field_tag 'json_file' %>
      </div>
      <div class="modal-footer">
        <a href="#" class="btn" class="close" data-dismiss="modal">Close</a>
        <%= submit_tag 'Upload file', :class => "btn btn-primary" %>
      </div>
  <% end %>
</div>