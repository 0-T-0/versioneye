<section class="section-lp round" style="text-align: center;">
	<h1 class="lp_head" style="text-align: center;">
		Try it!
	</h1>
	<div class="lp_box" style="text-align: center;" >
		Upload your file (pom.xml, requirements.txt, Gemfile)
	</div>
	<div  style="text-align: center;">
		<%= form_for services_path, :html => {:multipart => true, :accept => "text/xml" } do |f|  %>
			<div style="padding-bottom: 20px;">
				<%= file_field 'upload', 'datafile', :class => "round" %>
			</div>
			<div>
		        <%= f.submit "Upload", :class => "button" %>
		    </div>
		<% end %>
	</div>
</section>