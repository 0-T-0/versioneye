<div id="dialog_feedback" title="Feedback" style="display: none">			
	<div class="dialog_description">
		<p>
			<%= form_tag("/feedback.js", :method => "post", :remote => true) do  %>    
				<input type="hidden" name="value_a" value="" id="value_a" />
				<input type="hidden" name="value_b" value="" id="value_b" />
			    <div style="display:table-row;">
			      <div class="labelCelBig">
					<%= label_tag(:fb_fullname, "Full Name") %>
			      </div>
			      <div class="inputCel">
					<% if signed_in? %>
						<%= text_field_tag :fb_fullname, current_user.fullname, :class => "round" %>
					<% else %>
						<%= text_field_tag :fb_fullname, nil, :class => "round" %>
					<% end %>
			      </div>
			    </div>

			    <div style="display:table-row;">
			      <div class="labelCelBig">
					<%= label_tag(:fb_email, "E-Mail") %>
			      </div>
			      <div class="inputCel">
					<% if signed_in? %>
						<%= text_field_tag :fb_email, current_user.email, :class => "round" %>
					<% else %>
						<%= text_field_tag :fb_email, nil, :class => "round" %>
					<% end %>
					
			      </div>
			    </div>
			
				<div style="display:table-row;">
			      <div class="labelCelBig labelCelBigTop">
					<%= label_tag(:feedback) %>
			      </div>
			      <div class="inputCel">
					<%= text_area_tag :feedback, nil, :class => "round", :maxlength => "1000", :onKeyUp => "textCounter(this, document.getElementById('counter'), 1000)"  %>
			      </div>
			    </div>
				
				<% if !signed_in? %>
					<div style="display:table-row;">
				      <div class="labelCelBig labelCelBigTop">
						<%= label_tag(:fb_math, "", :id => "fb_math") %>
				      </div>
				      <div class="inputCel">
						<%= text_field_tag :fb_math, nil, :class => "round" %>
				      </div>
				    </div>
				<% end %>
			
			    <div style="display:table-row;">
			      <div class="labelCelBig"></div>
			      <div class="inputCel">
					<button type="submit" class="btn btn-large btn-primary" onClick="return validateFeedbackForm()" >Send</button>
			      </div>
			    </div>
			<% end %>
		</p>
	</div>
</div>