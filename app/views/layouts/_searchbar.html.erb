<div class="row" style="margin-top:20px; margin-bottom: 20px;" >
  <div class="span6" >
    <h1 class="page-title" >
      <% if yield(:page_header) && !yield(:page_header).empty? %>
        <%= yield(:page_header) %>
      <% else %>
        <%= yield(:title) %>
      <% end %>
    </h1>
  </div>
  <div class="span4 pull-right">
    <% if !yield(:title).eql?("Sign Up") && !yield(:title).eql?("Sign In") && !yield(:title).eql?("Search Results") %>
    <form id="form" action="/search" method="GET">
      <div class="input-append pull-right" >
          <input name="q" type="text" value="<%= @query %>" />
          <button class="btn">
            <span class="icon_search"></span>
          </button>
      </div>
    </form>
    <% end %>
  </div>
</div>
