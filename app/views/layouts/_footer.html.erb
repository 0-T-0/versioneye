<footer class="footer">
	<div class="container row">
		<hr/>
	</div>
	<div class="container row">
		<div class="span2" >
			<h5 class="dep_header">VersionEye</h5>
			<ul class="footer-links">
				<li><%= link_to t(:page_footer_about), about_path %></li>
				<li><%= link_to t(:page_footer_team), about_path %></li>
			</ul>
		</div>
		<div class="span3" >
			<h5 class="dep_header">Legal</h5>
			<ul class="footer-links">
				<li><%= link_to "Imprint", imprint_path %></li>
