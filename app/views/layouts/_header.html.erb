<header >
	<div class="container">
		<div class="logo_div">
			<%= link_to image_tag("header_logo_os.png"), root_path %>
		</div>
		<% if @hide.nil? %>
			<div id="searchfield_div" class="searchfield_div">			
				<form id="searchform" action="/search" method="GET" class="search-form" >				
					<input id="q" name="q" class="searchfield" type="text" value="<%= @query %>" />
				</form>
			</div>
		<% end %>
		<div class="searchlink_div">
			<a href="#" class="searchlink" title="Search" onclick="document.forms['searchform'].submit();">&nbsp;</a>
		</div>
		<div>
			<nav >
				<ul>
					<li class="nav-begin" >&nbsp;</li>
					<li><%= link_to "Newest", newest_version_path %></li>
					<li class="nav-line" ></li>
					<% if signed_in? %>
						<li><%= link_to image_tag("news_off.png", :title => "News", :alt => "News", :id => "news_img"), users_news_path, :onmouseover => "document.getElementById('news_img').src='/assets/news_on.png';", :onmouseout => "document.getElementById('news_img').src='/assets/news_off.png';" %></li>
						<li class="nav-line" ></li>
						<li><%= link_to image_tag("project_off.png", :title => "Projects", :alt => "Prjects", :id => "projects_img"), 
																		                user_projects_path, 
																		 				:onmouseover => "document.getElementById('projects_img').src='/assets/project_on.png';",
																		 				:onmouseout => "document.getElementById('projects_img').src='/assets/project_off.png';" %></li>
						<li class="nav-line" ></li>
						<li><%= link_to image_tag("myprofile_off.png", :title => "My Profile", :alt => "My Profile", :id => "myprofile_img"), favoritepackages_user_path(current_user),  :onmouseover => "document.getElementById('myprofile_img').src='/assets/myprofile_on.png';", :onmouseout => "document.getElementById('myprofile_img').src='/assets/myprofile_off.png';" %></li>
						<li class="nav-line" ></li>	
						<li><%= link_to image_tag("settings_off.png", :title => "Settings", :alt => "Settings", :id => "settings_img"), 
						                edit_user_path(current_user), 
						 				:onmouseover => "document.getElementById('settings_img').src='/assets/settings_on.png';",
						 				:onmouseout => "document.getElementById('settings_img').src='/assets/settings_off.png';" %></li>
						<li class="nav-line" ></li>	
						<li><%= link_to image_tag("logout_off.png", :title => "Logout", :alt => "Logout", :id => "logout_img"), 
							 			signout_path, 
										:onmouseover => "document.getElementById('logout_img').src='/assets/logout_on.png';",
						 				:onmouseout => "document.getElementById('logout_img').src='/assets/logout_off.png';",
										:method => :delete %></li>
					<% else %>
						<li><%= link_to "Sign Up", signup_path %></li>
						<li class="nav-line" ></li>	
						<li><%= link_to "Sign In", signin_path %></li>
					<% end %>
					<li class="nav-end" >&nbsp;</li>	
				</ul>
			</nav> 
		</div>
	</div>
</header>