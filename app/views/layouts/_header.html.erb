<header >
	<div style="float: left;">
		<span style="font-weight:bold; font-size: 22px; vertical-align: middle; height: 55px; display:table-cell" ><%= link_to 'VersionEye', root_path %></span>
	</div>	
	<div style="float:right;">
		<nav class="round">
			<ul>
				<% if signed_in? %>
					<li><%= link_to "My Products", user_path(current_user) %></li>
					<li><%= link_to "Sign out", signout_path, :method => :delete %></li>
				<% else %>
					<li><%= link_to "Sign Up", signup_path %></li>
					<li><%= link_to "Sign In", signin_path %></li>
				<% end %>						
			</ul>
		</nav>
	</div>
</header>