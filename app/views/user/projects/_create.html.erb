<h1>New Project</h1>

<div class="info-text">
	Create a new project, by uploading a project file (pom.xml, Gemfile, pip requirements file). VersionEye 
	will show you which of your dependencies are outdated. <br/>
	<br/>
	<b>The file upload can take a couple of seconds! Please be patient.</b>
</div>

<div class="formCel">
	<%= form_for [:user, @project], :html => {:multipart => true, :accept => "text/xml" } do |f|  %>
	    <div class="div-row">
	      <div class="labelCel">
	        <%= f.label :name %>
	      </div>
	      <div class="inputCel">
	        <%= f.text_field :name, :class => "round" %>
	      </div>
	    </div>
		<div class="div-row">
	      <div class="labelCel" style="vertical-align: top; padding-top: 5px;">
	        <label>Project Type</label>
	      </div>
	      <div class="inputCel">
			<div style="vertical-align: top">
				<ul class="list-row">
					<li class="list-cell"><%= f.radio_button :project_type, "Maven2", :class => "radio" %></li>
					<li class="list-cell"><%= f.label :project_type_maven2, "Java Maven2 (pom.xml)", :class => "radio-label" %></li>
				</ul>
			</div>
			<div>
				<ul class="list-row">
					<li class="list-cell"><%= f.radio_button :project_type, "RubyGems", :class => "radio" %></li>
					<li class="list-cell"><%= f.label :project_type_rubygems, "Ruby (Gemfile)", :class => "radio-label" %></li>
				</ul>
			</div>
			<div>
				<ul class="list-row">
					<li class="list-cell"><%= f.radio_button :project_type, "PIP", :class => "radio" %></li>
					<li class="list-cell"><%= f.label :project_type_pip, "Python PIP (requirements.txt)", :class => "radio-label" %></li>
				</ul>
			</div>
	      </div>
	    </div>
		<div class="div-row">
	      <div class="labelCel">
	        <label>File</label>
	      </div>
	      <div class="inputCel">
			<%= file_field 'upload', 'datafile', :class => "round" %>
	      </div>
	    </div>
		<div class="div-row">
	      <div class="labelCel"></div>
	      <div class="submitCel">
	        <%= f.submit "Create", :class => "button" %>
	      </div>
	    </div>
	<% end %>
</div>