<div class="sidebar" >
	
	<%= render "/user/projects/navi" %>
	
</div>	
<div class="content">	
	<% if @projects.nil? || @projects.empty? %>
		<%= render "/user/projects/create" %>
	<% else %>		
		<div class="projects" id="projects" >			
			<% @projects.each do |project| %>
				<div class="project" >
					<%= link_to project.name, user_project_path(project), :class => "searchResultLink" %><br/>
					<span class="meta-text-small">Dependencies: <%= project.dep_number %>, Outdated: <span style="color: <%= outdated_color(project) %>" ><%= project.out_number %></span></span>
				</div>
			<% end %>
		</div>
	<% end %>
</div>