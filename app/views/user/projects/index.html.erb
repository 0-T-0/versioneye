
<% title "My Projects" %>

<div class="span3" >
	<%= render "/user/projects/navi" %>	
</div>

<div class="span8">

	<div class="row content_header_def" >
		VersionEye is watching <b><%= pluralize(@projects.size, "Project") %></b> for you.
	</div>
	<div class="span8 left_border" >
		<% if @projects.nil? || @projects.empty? %>
			<%= render "/user/projects/create" %>
		<% else %>
			<div id="projects" >
				<% @projects.each do |project| %>
					<div class="row search-item" >
						<%= link_to project.name, user_project_path(project), :class => "searchResultLink" %><br/>
						<span class="meta-text-small">
							<%= render :partial => "user/projects/project_numbers_sentence", :locals => { :project => project } %>
						</span>
					</div>
				<% end %>
			</div>
		<% end %>
	</div>

</div>