<div class="sidebar" >
	
	<%= render "/user/projects/navi" %>
	
</div>	
<div class="content">	
	<% if @libs.nil? || @libs.empty? %>
		<%= render "/user/projects/create" %>
	<% else %>		
		<div class="boxHeader">
			Most popular libs
		</div>
		
		<div class="projects" id="projects" >
			<% @libs.each do |lib_name, projects| %>
				<div class="project" >
					<h3><%= lib_name %>(<%= projects.length %>)</h3>
					<p>
						<% projects.each do |project| %>						
							<a href = "<%= user_project_path(project)  %>" style ="text-decoration:none;" >
								<span class = "label label-success"><%= project.name %></span>
							</a>
						<% end %>
					</p>
				</div>
			<% end %>
		</div>
	<% end %>
</div>