<!-- activation button -->
<div class = "socialbuttons">
  <a href="#newUrlModal" class =" btn btn-social btn-dark btn-rotated90" data-toggle="modal">
    Submit new url
  </a>
</div>

<!-- modal --> 
<%= form_tag(submitted_urls_path, :class => "form-horizontal") do %>
<div id = "newUrlModal" class = "modal hide fade" aria-hidden="true">
   <div class= "modal-header">
     <button type="button" class = "close" data-dismiss="modal" aria-hidden="true">x</button>
     <h5> Add new url </h5>
   </div>
   <div class="modal-body">
  <div class = "control-group">
    <%= label_tag :url,nil, :class => "control-label" %>
    <div class = "controls">
      <%= text_field_tag :url, nil, :class => "span5" %>
    </div>
  </div>
   <div class = "control-group">
    <%= label_tag :message, nil, :class => "control-label" %>
    <div class = "controls">
      <%= text_area_tag :message, nil, :size => "29x7", :class => "span5",
          :maxlength => "255", 
          :onKeyUp => "textCounter(this, document.getElementById('feedback_counter'), 255)" %>
				<br />
				<span id="feedback_counter" class="help-block label-danger">max:255</span>
      
      </div>
    </div>

    <% unless current_user %>
      <div class="control-group">
        <%= hidden_field_tag :value_a %>
        <%= hidden_field_tag :value_b %>
        <%= label_tag(:fb_math, "", :id => "fb_math", :class => "control-label") %>
        <div class="controls captcha_math">
          <%= text_field_tag :fb_math, nil, :class => "input-large" %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="modal-footer">
    <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
    <button class="btn btn-primary" type = "submit" >Submit</button>
  </div>
</div>


<% end %>
