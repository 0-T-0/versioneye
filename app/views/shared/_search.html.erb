<%= form_tag("/search", :method => "get") do %>
    <div style="display:table-row;">
      <div class="labelCel">
        <%= label_tag(:q, "Product:") %>
      </div>
      <div class="inputCel">
        <%= text_field_tag :q, @query, :class => "round" %>
      </div>
	  <div class="labelCel" style="text-align: left">
		<%= submit_tag "Search", :class => "button" %>
	  </div>
    </div>
<% end %>