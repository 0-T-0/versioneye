<div class="div-row">
	<div class="div-cell avatar-comment" >
		<%= gravatar_image_tag( comment.user.email, :style => "width: 40px;", :alt => comment.user.fullname, :gravatar => { :size => 40, :default => "#{configatron.server_url}/assets/profile_icon.png" }) %>
	</div>
	<div class="div-cell comment-meta-box">
		<div class="meta-text-small">
			<%= link_to comment.user.fullname, user_path(comment.user) %> <br/>
			<%= comment.created_at.strftime("%b %d, %Y - %I:%m %p") %>
		</div>
	</div>
</div>
<div class="div-row">
	<div class="div-cell" ></div>
	<div class="div-cell">
		<div>
			<%= comment.comment %>
		</div>
		<div class="meta-text-small share-cell" >
			<ul class="list-row">
				<li class="list-cell share-on">Share on</li>
				<li class="list-cell share-on-icon">
					<%= image_tag "facebook_icon.png", :onclick=>"shareOnFacebook('#{configatron.server_url}/vc/#{comment.id}', '#{comment.user.fullname} on #{@product.name_and_version} @VersionEye');", :alt=>"Facebook", :title=>"Facebook" %>
				</li>
				<li class="list-cell share-on-icon">
					<a href="http://twitter.com/share" 
					   class="twitter-share-button" 
					   data-url="<%= configatron.server_url %>/vc/<%= comment.id %>" 
					   data-text="<%= comment.user.fullname %> rated <%= @product.name_and_version %> with <%= comment.rating %> stars @VersionEye read the #review here:" 
					   data-count="horizontal" >Twitter</a>
				</li>
			</ul>
		</div>
	</div>
</div>