<div class = "control-group">
  <%= label_tag :url,nil, :class => "control-label" %>
  <div class = "controls">
    <%= text_field_tag :url, nil, :class => "span5" %>
  </div>
</div>

<div class = "control-group">
  <%= label_tag :message, nil, :class => "control-label" %>
  <div class = "controls">
    <%= text_area_tag :message, nil, :size => "29x4", :class => "span5",
        :maxlength => "255", 
        :onKeyUp => "textCounter(this, document.getElementById('feedback_counter'), 255)" %>
      <br />
      <span id="feedback_counter" class="help-block label-danger">max:255</span>
  </div>
</div>

<% unless current_user %>
  <div>
    <%= label_tag :user_email, nil, :class => "control-label" %>
    <div class = "controls">
      <%= text_field_tag :user_email, nil, :class => "span5" %>
    </div>
  </div>
  <div class="control-group">
    <%= hidden_field_tag :value_a %>
    <%= hidden_field_tag :value_b %>
    <%= label_tag(:fb_math, "", :id => "fb_math", :class => "control-label") %>
    <div class="controls captcha_math">
      <%= text_field_tag :fb_math, nil, :class => "input-large" %>
    </div>
  </div>
<% end %>


