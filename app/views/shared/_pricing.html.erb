<div class="plans" id="plans" >
	<% @plans = Plan.current_plans() %>
	<% @plans.each do |plan| %>
	<div class="row search-item" style="height: 45px; margin-left: 0;" >
		<div class="span2" style="padding: 10px;" ><%= plan.name %></div>
		<div class="span2" style="padding: 10px;"><%= plan.price %> $ / Month</div>
		<div class="span2" style="padding: 10px;"><%= plan.private_projects %> Private Project</div>
		<% if !@plan.nil? %>
			<div class="span1" style="padding: 10px;" >
				<% if @plan && @plan.name_id.eql?( plan.name_id ) %> 
					<span style="color: green; font-weight:bold">Current</span>
				<% else %> 
					<form action="/settings/updateplan" method="POST" > 
						<input type="hidden" name="plan" value="<%= plan.name_id %>" />
						<button type="submit" class="btn2" >Book It</button>
					</form>
				<% end %>
			</div>
		<% end %>
	</div>
	<% end %>
</div>