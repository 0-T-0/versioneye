<div class="span3" >

	<%= render "settings/navi" %>	

</div>
<div class="span8">

  <div class="boxHeader">
	Password Settings
  </div>
  <div class="boxContainer">
	<%= form_tag("/settings/updatepassword", :method => "post") do  %>    

		<div style="display:table-row;">
	      <div class="labelCelBig">
			<%= label_tag("Cur. Password") %>
	      </div>
	      <div class="inputCel">
			<%= password_field_tag :password, "", :class => "round" %>
	      </div>
	    </div>	

		<div style="display:table-row;">
	      <div class="labelCelBig">
			<%= label_tag("New password") %>
	      </div>
	      <div class="inputCel">
			<%= password_field_tag :new_password, "", :class => "round" %>
	      </div>
	    </div>

		<div style="display:table-row;">
	      <div class="labelCelBig">
			<%= label_tag("Repeat New pas.") %>
	      </div>
	      <div class="inputCel">
			<%= password_field_tag :repeat_new_password, "", :class => "round" %>
	      </div>
	    </div>

	    <div style="display:table-row;">
	      <div class="labelCelBig"></div>
	      <div class="inputCel">
			<button type="submit" class="btn btn-large btn-primary" >Save</button>
	      </div>
	    </div>
	<% end %>
	</div>

</div>

