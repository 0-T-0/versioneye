
<div class="col-md-3" >
  <%= render "organisations/navi" %>
</div>
<div class="col-md-9">

  <div class="content_header_def" >
    <%= pluralize( @organisation.component_list.count, "component" ) %> used in this organisation (<%= @organisation.name %>)
  </div>

  <div class="content" >

    <p>
      This page lists all components which are used in this organsation and even shows which projects are using them.
      <br/><br/>
    </p>

    <% comps = @organisation.component_list.sort.to_h %>
    <% comps.keys.each do |key| %>
      <% sp = key.split(':') %>
      <% language = sp[0].to_s.downcase %>
      <% prod_key = sp[1].to_s.gsub('/', ':') %>
      <% version  = sp[2] %>
      <h4>
        <span class="icon_<%= language %> on" style="margin-left: -12px;" ></span> <%= link_to "#{prod_key}:#{version}", "/#{language}/#{prod_key}" %>
      </h4>
      <ul>
      <% comps[key].each do |val| %>
        <% sps = val.split(":") %>
          <li><%= link_to sps[1], user_project_path(sps[2], :child => 'summary'), :class => 'searchResultLink' %></li>
      <% end %>
      </ul>
      <hr>
    <% end %>

  </div>

</div>
